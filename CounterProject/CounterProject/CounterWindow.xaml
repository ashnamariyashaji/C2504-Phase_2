<Window x:Class="CounterProject.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <Canvas>
        <TextBox x:Name="txtCounter"  Canvas.Left="302" TextWrapping="Wrap" Canvas.Top="118" Height="72" Width="151" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False" TextAlignment="Center" Background="LightGreen" Text="{Binding NewCounter.Number}"/>
        <Button x:Name="btnPlus"  Content="+" Canvas.Left="180" Canvas.Top="262" Height="70" Width="104" FontSize="36" Background="Pink" Command="{Binding PlusCommand}"/>
        <Button x:Name="btnMinus" Content="-" Canvas.Left="453" Canvas.Top="262" Height="70" Width="105" FontSize="36" Background="pink" Command="{Binding MinusCommand}"/>

    </Canvas>
</Window>
