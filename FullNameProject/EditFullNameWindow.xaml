<Window x:Class="FullNameProject.EditFullNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullNameProject"
        mc:Ignorable="d"
        Title="EditFullNameWindow" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <TextBlock HorizontalAlignment="Left" Margin="110,59,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Height="29" Width="107" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="116,140,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Height="26" Width="101" FontWeight="Bold" FontSize="14"/>
        <TextBlock Text="{Binding EditablePerson.FirstName}" HorizontalAlignment="Left" Margin="320,58,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding EditablePerson.LastName}" HorizontalAlignment="Left" Margin="322,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnUpdate" Command ="{Binding UpdateCommand}" Content="Update" HorizontalAlignment="Left" Margin="135,217,0,0" VerticalAlignment="Top" Width="110" Height="38"/>

    </Canvas>
</Window>
